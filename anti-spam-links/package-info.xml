<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<name>Anti-Spam Links</name>
	<id>CustomizeTeam:AntiSpamLinks</id>
	<type>modification</type>
	<version>1.0.1</version>

	<type>modification</type>

	<install for="2.0 RC2, 2.0 RC3">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<modification type="file">modification.xml</modification>
		<code>updateDatabase.php</code>
	</install>

	<uninstall for="2.0 RC2, 2.0 RC3">
		<modification type="file" reverse="true">modification.xml</modification>
	</uninstall>
	
	<install for="2.0 - 2.99.99, 2.0 RC4, 2.0 RC5">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<modification type="file">modificationrc4.xml</modification>
		<code>updateDatabase.php</code>
	</install>

	<uninstall for="2.0 - 2.99.99, 2.0 RC4, 2.0 RC5">
		<modification type="file" reverse="true">modificationrc4.xml</modification>
	</uninstall>
</package-info>